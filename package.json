{
  "name": "typescript-repo-template",
  "version": "0.0.0-beta.4",
  "description": "WIP üë®‚Äçüíª Template repository for typescript or javascript project",
  "author": "Godefroy Ponsinet",
  "license": "MIT",
  "homepage": "https://github.com/gponsinet/typescript-repo-template#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gponsinet/typescript-repo-template"
  },
  "bugs": {
    "url": "https://github.com/gponsinet/typescript-repo-template/issues"
  },
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "bin": {
    "typescript-repo-template": "bin/typescript-repo-template"
  },
  "keywords": [
    "template",
    "typescript",
    "docker",
    "cli",
    "native",
    "web"
  ],
  "scripts": {
    "prepare": "npm run gen && npm run build",
    "compatibility": "npx browserslist",
    "upgrade": "npx ncu -u",
    "lint": "find src -type f | grep '.js\\|.jsx\\|.ts\\|.tsx' | xargs eslint bin/*",
    "lint:fix": "npm run lint -- --fix",
    "check:types": "tsc --noEmit",
    "check:types:watch": "npm run check:ts -- --watch",
    "build": "npm run build:ts && npm run build:js",
    "build:ts": "npm run check:types && tsc --declaration --declarationMap",
    "build:js": "npm run lint:fix && babel src --out-dir lib --extensions \".js,.jsx,.ts,.tsx\" --source-maps inline",
    "bump:pre": "release-it --preRelease --github.preRelease",
    "bump:alpha": "release-it --preRelease --preReleaseId=alpha --npm.tag=alpha --github.preRelease",
    "bump:beta": "release-it --preRelease --preReleaseId=beta --npm.tag=beta --github.preRelease",
    "bump:rc": "release-it --preRelease --preReleaseId=rc --npm.tag=rc --github.preRelease",
    "gen": "npm run gen:protoc:web && npm run gen:protoc:node",
    "gen:protoc:web": "find src -type f -name '*.proto' | xargs protoc --plugin=protoc-gen-ts=./node_modules/.bin/protoc-gen-ts --js_out=import_style=commonjs,binary:. --ts_out=service=grpc-web:.",
    "gen:protoc:node": "find src -type f -name '*.proto' | xargs protoc --plugin=protoc-gen-ts=./node_modules/.bin/protoc-gen-ts --js_out=import_style=commonjs,binary:. --ts_out=service=grpc-node:.",
    "gen:readme": "readme"
  },
  "devDependencies": {
    "@babel/cli": "^7.6.0",
    "@babel/core": "^7.6.0",
    "@babel/plugin-proposal-class-properties": "^7.5.5",
    "@babel/plugin-proposal-export-default-from": "^7.5.2",
    "@babel/plugin-proposal-export-namespace-from": "^7.5.2",
    "@babel/plugin-proposal-nullish-coalescing-operator": "^7.4.4",
    "@babel/plugin-proposal-object-rest-spread": "^7.5.5",
    "@babel/plugin-proposal-optional-chaining": "^7.6.0",
    "@babel/plugin-proposal-partial-application": "^7.4.4",
    "@babel/plugin-proposal-pipeline-operator": "^7.5.0",
    "@babel/plugin-transform-typescript": "^7.6.0",
    "@babel/preset-env": "^7.6.0",
    "@babel/preset-react": "^7.0.0",
    "@types/google-protobuf": "^3.7.1",
    "@types/node": "^12.7.4",
    "@types/react": "^16.9.2",
    "@typescript-eslint/eslint-plugin": "^2.1.0",
    "@typescript-eslint/parser": "^2.1.0",
    "babel-eslint": "^10.0.3",
    "eslint": "^6.3.0",
    "eslint-config-prettier": "^6.2.0",
    "eslint-plugin-dependencies": "^2.4.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-node": "^10.0.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "npm-check-updates": "^3.1.21",
    "pbhbs": "^0.1.0",
    "prettier": "^1.18.2",
    "readme-md-generator": "^0.6.2",
    "release-it": "^12.3.6",
    "ts-protoc-gen": "^0.11.0",
    "typescript": "^3.6.2"
  },
  "browserslist": [
    "defaults"
  ],
  "release-it": {
    "hooks": {
      "before:bump": "npm run prepare",
      "after:bump": "npm run gen:readme -- --yes"
    },
    "git": {
      "commitMessage": "chore(release): bump v${version}"
    },
    "github": {
      "release": false
    }
  },
  "dependencies": {
    "@improbable-eng/grpc-web": "^0.11.0",
    "eslint-config-standard": "^14.1.0",
    "eslint-plugin-babel": "^5.3.0",
    "eslint-plugin-prettier": "^3.1.0",
    "eslint-plugin-react": "^7.14.3",
    "grpc": "^1.23.3"
  }
}
